<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="dexeinc.alephcalculator.Calculator"
    tools:showIn="@layout/app_bar_calculator">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/colorPrimary"
            android:weightSum="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#85929E"
                android:contextClickable="false"
                android:isScrollContainer="false"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.00"
                    android:orientation="horizontal"
                    android:paddingTop="1dp"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/operationDisplay"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:contextClickable="true"
                        android:isScrollContainer="true"
                        android:paddingRight="10dp"
                        android:text="0"
                        android:textAlignment="textEnd"
                        android:textColor="@android:color/black"
                        android:textColorLink="@android:color/background_light"
                        android:textSize="35sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.00"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/resultDisplay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingRight="10dp"
                        android:textAlignment="textEnd"
                        android:textSize="35sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <Button
                    android:id="@+id/buttonC"
                    android:layout_width="wrap_content"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:background="@android:color/holo_red_light"
                    android:soundEffectsEnabled="true"
                    android:text="C"
                    android:textColor="#D0D3D4"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/buttonPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:background="?attr/colorAccent"
                    android:soundEffectsEnabled="true"
                    android:text="%"
                    android:textColor="#D0D3D4"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/buttonParenthesis"
                    android:layout_width="wrap_content"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:background="?attr/colorAccent"
                    android:soundEffectsEnabled="true"
                    android:text="( )"
                    android:textColor="#D0D3D4"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/buttonDel"
                    android:layout_width="wrap_content"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:background="@android:color/holo_red_dark"
                    android:soundEffectsEnabled="true"
                    android:text="⌫"
                    android:textColor="#D0D3D4"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <Button
                    android:id="@+id/button7"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:soundEffectsEnabled="true"
                    android:text="7"
                    android:textColor="#D0D3D4"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:soundEffectsEnabled="true"
                    android:text="8"
                    android:textColor="#D0D3D4"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:soundEffectsEnabled="true"
                    android:text="9"
                    android:textColor="#D0D3D4"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/divide"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:background="?attr/colorAccent"
                    android:soundEffectsEnabled="true"
                    android:text="÷"
                    android:textColor="#D0D3D4"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:soundEffectsEnabled="true"
                    android:text="4"
                    android:textColor="#D0D3D4"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:soundEffectsEnabled="true"
                    android:text="5"
                    android:textColor="#D0D3D4"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:soundEffectsEnabled="true"
                    android:text="6"
                    android:textColor="#D0D3D4"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/multiply"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:background="?attr/colorAccent"
                    android:soundEffectsEnabled="true"
                    android:text="×"
                    android:textColor="#D0D3D4"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:soundEffectsEnabled="true"
                    android:text="1"
                    android:textColor="#D0D3D4"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:soundEffectsEnabled="true"
                    android:text="2"
                    android:textColor="#D0D3D4"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:soundEffectsEnabled="true"
                    android:text="3"
                    android:textColor="#D0D3D4"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/substract"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:background="?attr/colorAccent"
                    android:soundEffectsEnabled="true"
                    android:text="-"
                    android:textColor="#D0D3D4"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <Button
                    android:id="@+id/buttonDot"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:soundEffectsEnabled="true"
                    android:text="."
                    android:textColor="#D0D3D4"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button0"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:soundEffectsEnabled="true"
                    android:text="0"
                    android:textColor="#D0D3D4"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/buttonEquals"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:background="@android:color/holo_orange_dark"
                    android:soundEffectsEnabled="true"
                    android:text="="
                    android:textColor="#D0D3D4"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/add"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:background="?attr/colorAccent"
                    android:soundEffectsEnabled="true"
                    android:text="+"
                    android:textColor="#D0D3D4"
                    android:textSize="30sp" />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
